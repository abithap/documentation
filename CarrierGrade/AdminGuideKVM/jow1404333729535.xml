            </fig>
            <p id="9">The menu  contains one section.</p>
        </section>
        <section id="section_N1003B_N10024_N10001" id="10">
            <title id="11">System</title>
            <table id="table_u3h_gmf_44">
                <tgroup cols="3">
                    <colspec colname="col1" colwidth="18*"/>
